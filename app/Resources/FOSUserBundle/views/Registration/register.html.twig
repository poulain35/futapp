{% trans_default_domain 'FOSUserBundle' %}
{% extends "login/layout.html.twig" %}

{% block title %}Créer un compte FUTApp{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block fos_user_content %}

    <div class="d-flex justify-content-center btn-group" data-toggle="buttons">
        <label class="btn btn-light-blue form-check-label">
            <input class="form-check-input" type="radio" name="options" id="connexion" autocomplete="off"> Se connecter
        </label>
        <label class="btn btn-light-blue form-check-label active">
            <input class="form-check-input" type="radio" name="options" id="register" autocomplete="off" onclick=""> S'inscrire
        </label>
    </div>
    <br/>

    <form action="{{ path("fos_user_registration_register") }}" method="post" class="login100-form validate-form">

        {{ form_start(form) }}
        {{ form_errors(form) }}

        <div class="wrap-input100 validate-input">
            <span class="label-input100">{{ form_label(form.nom) }}</span>
            {{ form_errors(form.nom) }}
            {{ form_widget(form.nom, { 'attr': {'class': 'input100'} }) }}
            <span class="focus-input100"></span>
        </div>

        <div class="wrap-input100 validate-input">
            <span class="label-input100">{{ form_label(form.prenom) }}</span>
            {{ form_errors(form.prenom) }}
            {{ form_widget(form.prenom, { 'attr': {'class': 'input100'} }) }}
            <span class="focus-input100"></span>
        </div>

        <div class="wrap-input100 validate-input">
            <span class="label-input100">{{ form_label(form.email) }}</span>
            {{ form_errors(form.email) }}
            {{ form_widget(form.email, { 'attr': {'class': 'input100'} }) }}
            <span class="focus-input100"></span>
        </div>

        <div class="wrap-input100 validate-input">
            <span class="label-input100">{{ form_label(form.plainPassword.first) }}</span>
            {{ form_errors(form.plainPassword.first) }}
            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'input100'} }) }}
            <span class="focus-input100"></span>
        </div>

        <div class="wrap-input100 validate-input">
            <span class="label-input100">{{ form_label(form.plainPassword.second) }}</span>
            {{ form_errors(form.plainPassword.second) }}
            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'input100'} }) }}
            <span class="focus-input100"></span>
        </div>

        <div class="container-login100-form-btn">
            <div class="wrap-login100-form-btn">
                <div class="login100-form-bgbtn"></div>
                <button class="login100-form-btn" id="_submit" name="action">
                    {{ 'registration.submit'|trans }}
                </button>
            </div>

            <a href="{{ path('fos_user_security_login') }}" class="dis-block txt3 hov1 p-r-30 p-t-10 p-b-10 p-l-30">
                J'ai déjà un compte
                <i class="fa fa-long-arrow-right m-l-5"></i>
            </a>
        </div>

        {{ form_end(form) }}
    </form>
{% endblock fos_user_content %}